<div class="left-button">
  <%= link_to "一覧に戻る", users_path(@user),class:"edit-link" %>
</div>
<h2 class="rooms-title">Chat room</h2>


<div class="user-name">
<p>今この部屋にいるのは</p>
<% @entries.each do |e| %>
  <strong>
        <!-- アバターの記述があった -->
    <a class="rooms-user-link" href="/users/<%= e.user.id %>">
      <%= e.user.name %>さん<br>
    </a>
  </strong>
<% end %>
  </div>

<hr>
<div class="chats">

  <div id="allchat" class="chat">
    <%= render 'chats/show', messages: @messages %>
  </div>

  <div class="posts">
  	<%= form_with(model:@message, remote: true) do |f| %>
    <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>