<div class="container">

	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可　？ -->

			<!-- チャット用 -->
			<% unless @user.id == current_user.id %>
			<% if @isRoom == true %>
			<p class="user-show-room"><a href="/chats/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
				<% else %>
				<%= form_for @room do |f| %>
				<%= fields_for @entry do |e| %>
				<%= e.hidden_field :user_id, value: @user.id %>
				<% end %>
				<%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
				<% end %>
				<% end %>
				<% end %>

				<h2>New book</h2>
				<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
<!--books一覧 -->

<% if @user = current_user%>
<div id="map"></div>
<% end %>

<style>
	#map {
		height: 600px;
		width: 80%;
		margin-left: 200px;
		margin-top: 50px;
		margin-bottom: 50px;
	}
</style>


<!-- <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyAOhLA-VsPczm3kPTXq-Q69__jS9a-rcwI&callback=initMap -->
<!-- async: true, defer: true -->

<script>
	function initMap() {
		var latlng = {
			lat: < %= @user.latitude % > ,
			lng: < %= @user.longitude % >
		};
		var contentString = '<%= @user.full_address %>';
		// PINを挿す位置を決める
		var map = new google.maps.Map(document.getElementById('map'), {
			zoom: 15,
			center: latlng
			// 初期の位置
		});
		var transitLayer = new google.maps.TransitLayer();
		transitLayer.setMap(map);


		var infowindow = new google.maps.InfoWindow({
			content: contentString
		});

		var marker = new google.maps.Marker({
			position: latlng,
			map: map,
			title: contentString
		});

		marker.addListener('click', function () {
			infowindow.open(map, marker);
		});
	}
</script>



<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['KEY']%>&callback=initMap"> </script>